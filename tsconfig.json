{
    "compilerOptions":{
       "target":"es2017",
       "module":"commonjs",
       "declaration":false,
       "noLib":false,
       "emitDecoratorMetadata":true,
       "experimentalDecorators":true,
       "sourceMap":true,
       "pretty":true,
       "strict": true,
       "noImplicitAny":true,
       "noImplicitReturns":false,
       "noImplicitUseStrict":false,
       "outDir":"build/",
       "baseUrl":"src/"
    },
    "include":[
       "src/**/*"
    ],
    "exclude":[
       "node_modules"
    ],
    "compileOnSave":true
 }